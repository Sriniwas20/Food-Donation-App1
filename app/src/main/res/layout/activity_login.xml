<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bgloginpage"
    tools:context=".LoginActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
          android:id="@+id/textview1"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="150dp"
          android:text="VOLUNTEER LOGIN"
          android:textStyle="bold"
          android:fontFamily="@font/roboto"
          android:textAlignment="center"
          android:textSize="30dp"/>

      <EditText
          android:id="@+id/LogMobile"
          android:layout_width="240dp"
          android:layout_height="60dp"
          android:maxLength="10"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="240dp"
          android:paddingTop="10dp"
          android:layout_marginBottom="15dp"
          android:inputType="phone"
          android:textAlignment="center"
          android:hint="Enter Your Number" />


      <EditText
          android:id="@+id/LogPassword"
          android:layout_width="240dp"
          android:layout_height="60dp"
          android:paddingTop="5dp"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/LogMobile"
          android:textAlignment="center"
          android:inputType="textPassword"
          android:hint="Enter Your Password"/>

      <TextView
          android:id="@+id/tvforgotpassword"
          android:layout_width="250dp"
          android:layout_height="60dp"
          android:text="Forgot Password?"
          android:layout_centerHorizontal="true"
          android:textAlignment="center"
          android:layout_below="@id/LogPassword"
          android:textSize="10dp"/>

      <Button
          android:id="@+id/logButton"
          android:layout_width="120dp"
          android:layout_height="55dp"
          android:layout_marginTop="60dp"
          android:background="@drawable/button_background_green"
          android:layout_marginLeft="55dp"
          android:layout_below="@id/LogPassword"
          android:text="Sign In"
          android:textSize="18dp"/>

      <Button
          android:id="@+id/signButton"
          android:layout_width="120dp"
          android:layout_height="55dp"
          android:background="@drawable/button_background_green2"
          android:layout_marginTop="60dp"
          android:layout_marginLeft="188dp"
          android:layout_below="@id/LogPassword"
          android:text="Sign Up"
          android:textSize="18dp"/>


  </RelativeLayout>



</RelativeLayout>